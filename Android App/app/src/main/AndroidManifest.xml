<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moham.zaker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Activities.TeacherOverviewActivity" />
        <activity android:name=".Activities.StudentOverviewActivity" />
        <activity android:name=".Activities.TeacherCommunityActivity" />
        <activity android:name=".Activities.StudentCommunityActivity" />
        <activity android:name=".Activities.StudentProgressActivity" />
        <activity android:name=".Activities.TeacherProgressActivity" />
        <activity android:name=".Activities.StudentQuizActivity" />
        <activity android:name=".Activities.TeacherQuizListActivity" />
        <activity android:name=".Activities.QuizInputActivity" />
        <activity android:name=".Activities.QuizInputFinishedActivity" />
        <activity android:name=".Activities.StudentFinalScoreActivity" />
        <activity android:name=".Activities.StudentQuizListActivity" />
        <activity android:name=".Activities.ChatRoomActivity" />
        <activity android:name=".Activities.WordsInputActivity"></activity>
    </application>

</manifest>